@model ObligT1.Models.NyTransaksjon
@using (Html.BeginForm("ValiderNyTransaksjon", "Kundes"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <h2>Ny Transaksjon</h2>
    <table class="table">
        <thead>
            <tr>
                <td>
                    <strong>
                    Velg kontoNr:
                    </strong>
                </td>
                <td>
                    <strong>
                        Beløp:
                    </strong>
                </td>
                <td>
                    <strong>
                        Til konto:
                    </strong>
                </td>
                <td>
                    <strong>
                        Forfallsdato:
                    </strong>
                </td>
                <td></td>
            </tr>
        </thead>
        <tr>
            <td>
                <select id="KontoSelect" class="form-control"></select>
            </td>
            <td>
                @Html.EditorFor(model => model.Belop, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Belop, "", new { @class = "text-danger" })
            </td>
            <td>
                @Html.EditorFor(model => model.TilKonto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TilKonto, "", new { @class = "text-danger" })
            </td>
            <td>
                @Html.EditorFor(model => model.Forfallsdato, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Forfallsdato, "", new { @class = "text-danger" })
            </td>
            <td>
                <input type="submit" name="SendTilModal" value="Neste" class="btn btn-default"/>
            </td>
        </tr>
    </table>
}